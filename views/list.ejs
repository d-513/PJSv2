<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./head.ejs") %>
  </head>
  <body>
    <div class="container">
      <h1><a href="/">PJS - Tag List</a></h1>
      <table>
        <tr>
          <th>Tag</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% tags.forEach(tag => { %>
        <tr>
          <td><%- tag.name %></td>
          <td>
            <a href="/<%- tag.name %>/edit"
              ><img
                src="https://icongr.am/fontawesome/edit.svg?size=32&color=ffffff"
            /></a>
          </td>
          <td>
            <a href="/<%- tag.name %>/delete"
              ><img
                src="https://icongr.am/fontawesome/trash-o.svg?size=32&color=ffffff"
            /></a>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
